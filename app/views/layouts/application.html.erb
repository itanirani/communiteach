<!DOCTYPE html>
<html>
<head>
	<title>Communiteach</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<a class="navbar-brand" href="/schools">CommuniTeach</a>

			<form id="search-form" class="navbar-form navbar-middle" role="search">
				<div class="form-group">
					<%= form_tag schools_path, method: :get, authentication: false, id: 'search-form' do %>
					<%= text_field_tag :search, params[:search], class: "form-control" %>
					<button type="submit" class="btn btn-default">Search</button>
					<% end %>
				</div>
			</form>

		</div>
	</nav>

	<%= yield %>

</body>
</html>
